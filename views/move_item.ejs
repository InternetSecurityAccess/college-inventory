<%- layout('layout') %>

<h2>Переместить предмет: <%= item.name %></h2>

<form action="/item/<%= item.id %>/move" method="POST">
    <div>
        <label for="location_id">Новое местоположение:</label>
        <select id="location_id" name="location_id" required>
            <option value="">-- Выберите местоположение --</option>
            <% locations.forEach(loc => { %>
                <option value="<%= loc.id %>"><%= loc.name %></option>
            <% }) %>
        </select>
    </div>
    <div>
        <label for="description">Описание (причина перемещения):</label>
        <textarea id="description" name="description"></textarea>
    </div>
    <button type="submit">Переместить</button>
</form>

<br>
<a href="/item/<%= item.id %>">Отмена (на страницу деталей)</a>
<br>
<a href="/">К списку предметов</a>