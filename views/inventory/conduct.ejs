<%- include('../partials/header') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
            Инвентаризация: <%= inventory.floor %> этаж - <%= inventory.classroom_name %>
            <small class="text-muted">- <%= inventory.name %></small>
        </h5>
        <div class="badge bg-info fs-6">
            <i class="fas fa-clipboard-check"></i> Режим проверки
        </div>
    </div>
    <div class="card-body">
        <% if (inventory.description) { %>
            <div class="alert alert-light mb-4">
                <strong>Описание:</strong> <%= inventory.description %>
            </div>
        <% } %>
        
        <form id="inventoryForm" data-inventory-id="<%= inventory.id %>">
            <!-- Основное оборудование -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th width="50">№</th>
                            <th>Оборудование</th>
                            <th width="120">Ожидается</th>
                            <th width="150">Фактически</th>
                            <th width="200">Примечание</th>
                            <th width="100">Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% equipment.forEach((item, index) => { %>
                            <tr class="inventory-item" data-id="<%= item.id %>">
                                <td class="align-middle">
                                    <strong><%= index + 1 %></strong>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <% if (item.photo_filename) { %>
                                            <img src="/uploads/<%= item.photo_filename %>" 
                                                 alt="Фото оборудования" 
                                                 style="width: 40px; height: 40px; object-fit: cover;" 
                                                 class="rounded me-3">
                                        <% } else { %>
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 40px; height: 40px;">
                                                <i class="fas fa-laptop text-muted"></i>
                                            </div>
                                        <% } %>
                                        <div>
                                            <strong><%= item.name %></strong>
                                            <br>
                                            <small class="text-muted">
                                                Тип: <%= item.type_name %>
                                                <% if (item.inventory_number) { %>
                                                    | Инв. №: <code><%= item.inventory_number %></code>
                                                <% } %>
                                                <% if (item.serial_number) { %>
                                                    | S/N: <%= item.serial_number %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <span class="badge bg-secondary fs-6"><%= item.quantity %> шт.</span>
                                </td>
                                <td class="align-middle">
                                    <input type="number" 
                                           class="form-control quantity-input" 
                                           name="actual_<%= item.id %>" 
                                           value="<%= item.checked_quantity || 0 %>" 
                                           min="0" 
                                           max="1000"
                                           data-expected="<%= item.quantity %>"
                                           data-item-id="<%= item.id %>">
                                </td>
                                <td class="align-middle">
                                    <input type="text" 
                                           class="form-control note-input" 
                                           name="note_<%= item.id %>" 
                                           value="<%= item.note || '' %>" 
                                           placeholder="Комментарий..."
                                           data-item-id="<%= item.id %>">
                                </td>
                                <td class="align-middle">
                                    <span class="status-badge badge"></span>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <!-- Статистика в реальном времени -->
            <div class="card bg-light mt-4">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h4 class="text-primary" id="totalItems"><%= equipment.length %></h4>
                            <small class="text-muted">Всего позиций</small>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-success" id="matchedItems">0</h4>
                            <small class="text-muted">Совпадает</small>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-warning" id="deficitItems">0</h4>
                            <small class="text-muted">Недостача</small>
                        </div>
                        <div class="col-md-3">
                            <h4 class="text-danger" id="surplusItems">0</h4>
                            <small class="text-muted">Излишки</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Дополнительное оборудование -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-plus-circle"></i> Дополнительное оборудование (не из системы)
                    </h6>
                    <button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#addItemModal">
                        <i class="fas fa-plus"></i> Добавить
                    </button>
                </div>
                <div class="card-body" id="additionalEquipmentContainer">
                    <% if (additionalItems.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Тип</th>
                                        <th>Количество</th>
                                        <th>Примечание</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody id="additionalItemsTable">
                                    <% additionalItems.forEach(item => { %>
                                        <tr id="additionalItem-<%= item.id %>">
                                            <td><strong><%= item.name %></strong></td>
                                            <td>
                                                <span class="badge bg-secondary"><%= item.type_name %></span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary"><%= item.quantity %> шт.</span>
                                            </td>
                                            <td><%= item.note || '—' %></td>
                                            <td>
                                                <button class="btn btn-outline-danger btn-sm remove-additional-item" 
                                                        data-id="<%= item.id %>"
                                                        title="Удалить">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted mb-0" id="noAdditionalItems">Дополнительное оборудование не добавлено</p>
                    <% } %>
                </div>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <a href="/inventory" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Назад к списку
                    </a>
                </div>
                <div>
                    <button type="button" id="saveDraft" class="btn btn-outline-primary me-2">
                        <i class="fas fa-save"></i> Сохранить черновик
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i> Завершить инвентаризацию
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Модальное окно добавления оборудования -->
<div class="modal fade" id="addItemModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить дополнительное оборудование</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="addItemForm">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="itemName" class="form-label">Название оборудования *</label>
                        <input type="text" class="form-control" id="itemName" name="name" required
                               placeholder="Например: Стул складной, Лампа настольная">
                    </div>
                    <div class="mb-3">
                        <label for="itemType" class="form-label">Тип оборудования</label>
                        <select class="form-select" id="itemType" name="type_name">
                            <option value="">Выберите тип</option>
                            <% equipmentTypes.forEach(type => { %>
                                <option value="<%= type %>"><%= type %></option>
                            <% }); %>
                            <option value="Другое">Другое</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="itemQuantity" class="form-label">Количество</label>
                        <input type="number" class="form-control" id="itemQuantity" name="quantity" 
                               value="1" min="1" max="1000">
                    </div>
                    <div class="mb-3">
                        <label for="itemNote" class="form-label">Примечание</label>
                        <textarea class="form-control" id="itemNote" name="note" rows="3"
                                  placeholder="Дополнительная информация об оборудовании"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary" id="submitAddItem">
                        <i class="fas fa-plus"></i> Добавить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/js/inventory-conduct.js"></script>

<%- include('../partials/footer') %>