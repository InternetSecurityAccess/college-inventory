<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Инвентаризация</h2>
    <a href="/inventory/create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Новая инвентаризация
    </a>
</div>

<!-- Статистика -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= inventories.length %></h4>
                        <p class="card-text">Всего инвентаризаций</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clipboard-list fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= inventories.filter(i => i.status === 'completed').length %></h4>
                        <p class="card-text">Завершено</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= inventories.filter(i => i.status === 'in_progress').length %></h4>
                        <p class="card-text">В процессе</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-spinner fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-secondary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= inventories.filter(i => i.status === 'draft').length %></h4>
                        <p class="card-text">Черновики</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-edit fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Список инвентаризаций -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">История инвентаризаций</h5>
    </div>
    <div class="card-body">
        <% if (inventories.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Аудитория</th>
                            <th>Статус</th>
                            <th>Прогресс</th>
                            <th>Дата создания</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
<tbody>
    <% inventories.forEach(inv => { %>
        <tr>
            <td>
                <strong><%= inv.name %></strong>
                <% if (inv.description) { %>
                    <br>
                    <small class="text-muted"><%= inv.description %></small>
                <% } %>
            </td>
            <td>
                <i class="fas fa-door-open text-muted me-1"></i>
                <%= inv.floor %> этаж, <%= inv.classroom_name %>
            </td>
            <td>
                <span class="badge 
                    <%= inv.status === 'completed' ? 'bg-success' : 
                        inv.status === 'in_progress' ? 'bg-warning' : 
                        inv.status === 'draft' ? 'bg-secondary' : 'bg-light text-dark' %>">
                    <%= 
                        inv.status === 'completed' ? 'Завершено' :
                        inv.status === 'in_progress' ? 'В процессе' :
                        inv.status === 'draft' ? 'Черновик' : inv.status
                    %>
                </span>
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <div class="progress flex-grow-1 me-2" style="height: 20px;">
                        <%
                            const progress = inv.total_items > 0 ? 
                                Math.round((inv.checked_items / inv.total_items) * 100) : 0;
                            const progressClass = inv.status === 'completed' ? 'bg-success' : 'bg-info';
                        %>
                        <div class="progress-bar <%= progressClass %>" 
                             style="width: <%= progress %>%"
                             title="<%= inv.checked_items %> из <%= inv.total_items %>">
                        </div>
                    </div>
                    <small class="text-muted nowrap">
                        <%= inv.checked_items || 0 %>/<%= inv.total_items || 0 %>
                    </small>
                </div>
            </td>
            <td>
                <%= new Date(inv.created_at).toLocaleDateString('ru-RU') %>
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    <% if (inv.status === 'draft' || inv.status === 'in_progress') { %>
                        <a href="/inventory/conduct/<%= inv.id %>" 
                           class="btn btn-outline-primary" 
                           title="Провести инвентаризацию">
                            <i class="fas fa-clipboard-check"></i>
                        </a>
                    <% } %>
                    <% if (inv.status === 'completed') { %>
                        <a href="/inventory/report/<%= inv.id %>" 
                           class="btn btn-outline-info" 
                           title="Отчет">
                            <i class="fas fa-chart-bar"></i>
                        </a>
                    <% } %>
                    <button class="btn btn-outline-danger delete-inventory" 
                            data-id="<%= inv.id %>" 
                            data-name="<%= inv.name %>"
                            title="Удалить">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    <% }); %>
</tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-4">
                <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                <h5>Инвентаризации не найдены</h5>
                <p class="text-muted">Создайте первую инвентаризацию для учета оборудования</p>
                <a href="/inventory/create" class="btn btn-primary">Создать инвентаризацию</a>
            </div>
        <% } %>
    </div>
</div>

<!-- Модальное окно для удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтверждение удаления</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы уверены, что хотите удалить инвентаризацию "<span id="inventoryName"></span>"?</p>
                <p class="text-muted small">Все результаты этой инвентаризации будут удалены безвозвратно.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Удалить</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let inventoryIdToDelete = null;
    
    // Обработка удаления инвентаризации
    document.querySelectorAll('.delete-inventory').forEach(button => {
        button.addEventListener('click', function() {
            inventoryIdToDelete = this.getAttribute('data-id');
            const inventoryName = this.getAttribute('data-name');
            document.getElementById('inventoryName').textContent = inventoryName;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        });
    });
    
    // Подтверждение удаления
    document.getElementById('confirmDelete').addEventListener('click', function() {
        if (inventoryIdToDelete) {
            fetch(`/inventory/delete/${inventoryIdToDelete}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Ошибка: ' + data.message);
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                }
            })
            .catch(error => {
                console.error('Ошибка:', error);
                alert('Произошла ошибка при удалении');
            });
        }
    });
});
</script>

<style>
.nowrap {
    white-space: nowrap;
}
.progress {
    min-width: 80px;
}
</style>

<%- include('../partials/footer') %>