                        <li class="nav-item">
                            <a class="nav-link" href="/equipment">
                                <i class="fas fa-laptop"></i> Оборудование
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/classrooms">
                                <i class="fas fa-door-open"></i> Аудитории
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/equipment-types">
                                <i class="fas fa-tags"></i> Типы оборудования
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/inventory">
                                <i class="fas fa-clipboard-check"></i> Инвентаризация
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/classrooms/statistics">
                                <i class="fas fa-chart-bar"></i> Статистика
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main content -->
