<%- layout('layout') %>

<h2>Местоположения</h2>
<p><a href="/locations/add">Добавить новое местоположение</a></p>

<% if (locations.length === 0) { %>
    <p>Список местоположений пуст.</p>
<% } else { %>
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            <% locations.forEach(loc => { %>
                <tr>
                    <td><%= loc.name %></td>
                    <td><%= loc.description || '-' %></td>
                    <td>
                        <a href="/locations/edit/<%= loc.id %>">Редактировать</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } %>