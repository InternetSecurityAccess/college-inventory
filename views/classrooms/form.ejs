<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0"><%= title %></h5>
            </div>
            <div class="card-body">
                <form method="POST" action="<%= classroom ? '/classrooms/edit/' + classroom.id : '/classrooms/add' %>">
                    <div class="mb-3">
                        <label for="floor" class="form-label">Этаж *</label>
                        <input type="number" class="form-control" id="floor" name="floor" 
                               value="<%= classroom ? classroom.floor : '' %>" required min="1" max="10">
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Название аудитории *</label>
                        <input type="text" class="form-control" id="name" name="name" 
                               value="<%= classroom ? classroom.name : '' %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="description" class="form-label">Описание</label>
                        <textarea class="form-control" id="description" name="description" rows="3"><%= classroom ? classroom.description : '' %></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="is_service" name="is_service" 
                                   <%= classroom && classroom.is_service ? 'checked' : '' %>>
                            <label class="form-check-label" for="is_service">
                                Служебный кабинет
                            </label>
                        </div>
                        <div class="form-text">
                            Служебные кабинеты не используются для учебных занятий
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> <%= classroom ? 'Обновить' : 'Добавить' %>
                        </button>
                        <a href="/classrooms" class="btn btn-secondary">Отмена</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>