<%- include('../partials/header') %>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Список аудиторий</h5>
        <a href="/classrooms/add" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Добавить аудиторию
        </a>
    </div>
    <div class="card-body">
        <% if (classrooms.length > 0) { %>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Этаж</th>
                            <th>Название</th>
                            <th>Описание</th>
                            <th>Тип</th>
                            <th>Оборудование</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% classrooms.forEach(classroom => { %>
                            <tr>
                                <td><%= classroom.floor %></td>
                                <td><strong><%= classroom.name %></strong></td>
                                <td><%= classroom.description || '—' %></td>
                                <td>
                                    <% if (classroom.is_service) { %>
                                        <span class="badge bg-warning">Служебный</span>
                                    <% } else { %>
                                        <span class="badge bg-info">Учебный</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-secondary"><%= classroom.equipment_count %></span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="/classrooms/edit/<%= classroom.id %>" 
                                           class="btn btn-outline-primary" 
                                           title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-outline-danger delete-classroom" 
                                                data-id="<%= classroom.id %>" 
                                                data-name="<%= classroom.name %>"
                                                title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-4">
                <i class="fas fa-door-open fa-3x text-muted mb-3"></i>
                <h5>Аудитории не найдены</h5>
                <p class="text-muted">Добавьте первую аудиторию</p>
                <a href="/classrooms/add" class="btn btn-primary">Добавить аудиторию</a>
            </div>
        <% } %>
    </div>
</div>

<!-- Модальное окно для удаления -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтверждение удаления</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Вы уверены, что хотите удалить аудиторию "<span id="classroomName"></span>"?</p>
                <p class="text-muted small">Удаление возможно только если в аудитории нет оборудования.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Удалить</button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let classroomIdToDelete = null;
    
    // Обработка удаления аудитории
    document.querySelectorAll('.delete-classroom').forEach(button => {
        button.addEventListener('click', function() {
            classroomIdToDelete = this.getAttribute('data-id');
            const classroomName = this.getAttribute('data-name');
            document.getElementById('classroomName').textContent = classroomName;
            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        });
    });
    
    // Подтверждение удаления
    document.getElementById('confirmDelete').addEventListener('click', function() {
        if (classroomIdToDelete) {
            fetch(`/classrooms/delete/${classroomIdToDelete}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Ошибка: ' + data.message);
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                }
            })
            .catch(error => {
                console.error('Ошибка:', error);
                alert('Произошла ошибка при удалении');
            });
        }
    });
});
</script>

<%- include('../partials/footer') %>