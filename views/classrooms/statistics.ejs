<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Статистика по кабинетам</h2>
    <a href="/classrooms" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Назад к списку кабинетов
    </a>
</div>

<!-- Общая статистика -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= classrooms.reduce((sum, c) => sum + (c.total_items || 0), 0) %></h4>
                        <p class="card-text">Всего единиц оборудования</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= classrooms.reduce((sum, c) => sum + (c.total_equipment || 0), 0) %></h4>
                        <p class="card-text">Всего позиций оборудования</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-laptop fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= classrooms.filter(c => c.total_equipment > 0).length %></h4>
                        <p class="card-text">Кабинетов с оборудованием</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-door-open fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4><%= classrooms.length %></h4>
                        <p class="card-text">Всего кабинетов</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Таблица статистики -->
<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">Оборудование по кабинетам</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Кабинет</th>
                        <th>Этаж</th>
                        <th>Тип</th>
                        <th>Позиций оборудования</th>
                        <th>Всего единиц</th>
                        <th>Типы оборудования</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <% classrooms.forEach(classroom => { %>
                        <tr>
                            <td>
                                <strong><%= classroom.classroom_name %></strong>
                                <% if (classroom.is_service) { %>
                                    <span class="badge bg-warning ms-1">Служебный</span>
                                <% } %>
                                <br>
                                <small class="text-muted"><%= classroom.description || '—' %></small>
                            </td>
                            <td><%= classroom.floor %></td>
                            <td>
                                <% if (classroom.is_service) { %>
                                    <span class="badge bg-warning">Служебный</span>
                                <% } else { %>
                                    <span class="badge bg-info">Учебный</span>
                                <% } %>
                            </td>
                            <td>
                                <span class="badge <%= classroom.total_equipment > 0 ? 'bg-primary' : 'bg-secondary' %>">
                                    <%= classroom.total_equipment || 0 %>
                                </span>
                            </td>
                            <td>
                                <span class="badge <%= classroom.total_items > 0 ? 'bg-success' : 'bg-secondary' %>">
                                    <%= classroom.total_items || 0 %> шт.
                                </span>
                            </td>
                            <td>
                                <% if (classroom.equipment_types) { %>
                                    <div class="equipment-types">
                                        <% classroom.equipment_types.split(',').forEach(type => { %>
                                            <span class="badge bg-light text-dark me-1 mb-1"><%= type %></span>
                                        <% }); %>
                                    </div>
                                <% } else { %>
                                    <span class="text-muted">—</span>
                                <% } %>
                            </td>
                            <td>
                                <a href="/classrooms/statistics/<%= classroom.id %>" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-chart-bar"></i> Детально
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>