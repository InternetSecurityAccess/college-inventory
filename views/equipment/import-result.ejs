<%- include('../partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Результаты импорта</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-success">
                    <h6><i class="fas fa-check-circle"></i> Импорт завершен</h6>
                    <p class="mb-0">Успешно обработано: <strong><%= success %></strong> из <strong><%= total %></strong> записей</p>
                </div>

                <% if (errors.length > 0) { %>
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle"></i> Обнаружены ошибки:</h6>
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li><%= error %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <div class="d-flex gap-2">
                    <a href="/equipment" class="btn btn-primary">
                        <i class="fas fa-list"></i> К списку оборудования
                    </a>
                    <a href="/equipment/import" class="btn btn-secondary">
                        <i class="fas fa-file-import"></i> Новый импорт
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>